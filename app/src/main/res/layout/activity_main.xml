<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:id="@+id/total_background"
    android:background="@drawable/backound">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <TextView
            android:layout_width="400dp"
            android:layout_height="70dp"
            android:background="@drawable/tv_text_bg"
            android:gravity="center"
            android:text="Schedule    System"
            android:textColor="@color/white"
            android:textSize="30dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp">

        <TextView
            android:background="@drawable/tv_text_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="账号:"
            android:textColor="@color/bt_color_purple"
            android:textSize="22dp"/>

        <EditText
            android:id="@+id/et_username"
            style="@style/et_style"
            android:layout_marginLeft="20dp"
            android:hint="(手机号 / 学号)"
            android:background="@drawable/tv_text_bg"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp">

        <TextView
            android:background="@drawable/tv_text_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="密码:"
            android:textColor="@color/bt_color_purple"
            android:textSize="22dp" />

        <EditText
            android:id="@+id/et_password"
            style="@style/et_style"
            android:layout_marginLeft="20dp"
            android:hint="请输入你的密码"
            android:inputType="textPassword"
            android:background="@drawable/tv_text_bg"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_gravity="center">
        <CheckBox
            android:id="@+id/cb_remeber"
            android:buttonTint="@color/my_puple"
            android:textColor="@color/my_puple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="记住密码"/>
        <CheckBox
            android:id="@+id/cb_autoLogin"
            android:buttonTint="@color/my_puple"
            android:textColor="@color/my_puple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自动登录"
            android:layout_marginLeft="30dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bt_login"
            android:text="登         录"
            style="@style/bt_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tv_text_bg"
            android:onClick="Login"/>

    </LinearLayout>
    <TextView
        android:id="@+id/tv_regisiter"
        android:text="还没有账号？"
        android:textColor="@color/bt_color_purple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:onClick="toUserRegister"/>

</LinearLayout>